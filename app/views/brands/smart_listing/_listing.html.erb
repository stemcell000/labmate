<% isAdmin = can? :manage, Organization %>
<% isManager= ['superadmin', 'administrator', 'inventory_manager', 'user'].include? current_user.role%>
  <table class="table table-hover">
    <thead>
	      <tr>
	        <th class="col-lg-10 col-sm-10 col-md-10" ><%= smart_listing.sortable "Name", :name %></th>
			<th class="col-lg-2 col-sm-2 col-md-2"></th>
	      </tr>
    </thead>
    <tbody>
    	<% unless smart_listing.empty? %>  
      <% smart_listing.collection.each do |brand| %>
        <tr class="editable" data-id = "<%= brand.id %>" >
         	<%= smart_listing.render object: brand, partial: "brands/smart_listing/brand", locals: {object: brand, isAdmin: isAdmin, isManager: isManager} %>
        </tr>
      	<% end %>
	<% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>


