<% isAdmin = can? :manage, Organization %>
<% isManager= ['superadmin', 'administrator', 'inventory_manager'].include? current_user.role%>
<div class="row">
	<h2><%=t("global.maintenance_contracts")%></h2>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<%= render 'contracts/components/search'%>
		<div id="display-container" class="col-lg-3 pull-right">
				<%= render :partial => "contracts/components/toggle_display", :locals => { :option => @option } %>	
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-3">
		<%= link_to 'New contract', new_contract_path, class: "btn btn-default" %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<%= smart_listing_render(:contracts) %>
	</div>
</div>