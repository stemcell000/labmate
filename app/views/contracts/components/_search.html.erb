<%= search_form_for @q, :url => contracts_path, :remote => true do |f| %>
	<div class="row">
		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	
  <div class="panel panel-default">
  	
    <div class="panel-heading" role="tab" id="heading">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse" aria-expanded="false" aria-controls="collapse">
        <%=t('global.fine_search')%>
        <i class="indicator fa fa-chevron-right  pull-right"></i></a>
      </h4>
    </div>
    
    <div id="collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading">
      	<div class="panel-body">
      		<%= render partial: 'contracts/components/focus', locals: {f: f, contracts: @contracts} %>
      	</div>
     </div>
	</div>
</div>
	</div>
			<div class="form-row">
				<div class="col-md-12 col-sm-12">
					<div class="form-group">
		  				<%= f.submit class:"btn btn-default" %>
		 				 <input type="reset" value="Reset" onClick="window.location.reload()" class= "btn btn-default">
		  			</div>
		  		</div>
			</div>
 <%end%>
