  <table class="table table-hover">
    <thead>
	      <tr>
	        <th class="col-lg-1 col-sm-1 col-md-1" ><%= smart_listing.sortable "Number", :id %></th>
	        <th class="col-lg-2 col-sm-2 col-md-2" ><%= smart_listing.sortable "Name", :name %></th>
	        <th class="col-lg-2 col-sm-2 col-md-2" ><%= smart_listing.sortable "Provider", :Provider %></th>
	        <th class="col-lg-3 col-sm-3 col-md-3" ><%= smart_listing.sortable "Category", :Categories %></th>
			<th class="col-lg-1 col-sm-1 col-md-1" ><%= smart_listing.sortable "Start", :start %></th>
			<th class="col-lg-1 col-sm-1 col-md-1" ><%= smart_listing.sortable "End", :end %></th>
			<th class="col-lg-1 col-sm-1 col-md-1"></th>
	      </tr>
    </thead>
    <tbody>
    	<% unless smart_listing.empty? %>  
      <% smart_listing.collection.each do |contract| %>
        <tr class="editable" data-id = "<%= contract.id %>" >
         	<%= smart_listing.render object: contract, partial: "contracts/smart_listing/contract", locals: {object: contract} %>
        </tr>
      	<% end %>
	<% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>


