<td ><small><%= object.full_name%></small></td>
<td ><small><%= object.email %></small></td>
<td ><small><%= object.tel1 unless object.tel1.nil?%> <%= object.tel2 unless object.tel2.nil?%></small></td>
<td ><small><%= object.location.name unless object.location.nil?%></small></td>
<td ><small>
	<%if can? :manage, Department %>
		-
	<%else%>
	<%= object.teams.pluck(:name).to_sentence unless object.teams.nil? %>
	<%end%>
	</small>
</td>
<td class="actions">
	<%if can? :crud, :manage, object %>
			<%= smart_listing_item_actions [
			 {name: :custom, url: edit_user_path(object),
	  		method: :get, 
  			icon: 'fa fa-pencil-square-o', 
  			title: "Edit user"},
				]%>
		<%= smart_listing_item_actions [
			{name: :destroy, url: user_path(object), title: "Destroy", :confirmation => "Are you sure you want to delete this user ?"}
			]%>
	<%end%>
</td>