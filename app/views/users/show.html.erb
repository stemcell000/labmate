<h3>Profile <%=@user.full_name%></h3>
<h4>User name/login : <%=@user.username%></h4>
	<div class="row">
		<div class='panel panel-primary'>
			<div class="panel-heading">Contact information</div>
			<div class="panel-body">
				<div class="container">
					<div class="col-lg-11 col-md-11 col-sm-11">
						<%=render :partial => "users/components/user", :locals => {:user => @user}  %>
					</div>
				</div>
			</div>
		</div>
	</div>
<%unless @user.items.empty?%>
	<div class="row">
	<div class="panel panel-default">
		<div class="panel-heading">Items</div>
		<div class="panel-body">
			<div class="container">
				<table>
					<thead class="thead-dark">
						 <tr>
						 	<th>Name</th>
						 	<th>Barcode</th>
						 </tr>
					</thead>
					<tbody>
					<% @user.items.each do |item|%>
					<tr>
						<td class="col-lg-8 col-md-8 col-sm-8"><%=item.name%></td>
						<td class="col-lg-2 col-md-2 col-sm-2"><%=item.barcode%></td>
					</tr>
					<%end%>
					</tbody>
				</table>
				</div>
		</div>
	</div>
	</div>
<%end%>
<div class="row">
				<div class="col-md-12 col-sm-12">
		  			<div class="btn-group">
		  				<%=link_to "Edit Profile", edit_user_path(@user), class: 'btn btn-default' %>
		  				<%= link_to "Back", :root, class: 'btn btn-default' %>
	
</div>
