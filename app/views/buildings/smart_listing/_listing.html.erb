  <table class="table table-hover">
    <thead>
	      <tr>
	        <th class="col-lg-10 col-sm-10 col-md-10" ><%= sort_link(@q, :name, t('menu.name'), default_order: :desc) %></th>
			<th class="col-lg-2 col-sm-2 col-md-2"></th>
	      </tr>
    </thead>
    <tbody>
    	<% unless smart_listing.empty? %>  
      <% smart_listing.collection.each do |building| %>
        <tr class="editable" data-id = "<%= building.id %>" >
         	<%= smart_listing.render object: building, partial: "buildings/smart_listing/building", locals: {object: building} %>
        </tr>
      	<% end %>
	<% end %>
	<%if can? :manage, Building %>
		<%= smart_listing.item_new colspan: 9, link: new_building_path(:object) %>
	<%end%>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>


