<td class="col-lg-6 col-md-6 col-sm-6"><small><%= category.name.nil? ? "unknown" : category.name %></small></td>
<td class="col-lg-4 col-md-4 col-sm-4"><small><%= category.acronym.nil? ? "unknown" : category.acronym %></small></td>
<td class="col-lg-2 col-md-10 col-sm-10 actions">
<%if can? :manage, Category %>	
	<%= smart_listing_item_actions [
		{name: :custom,    url: edit_category_path(category),
	  		method: :get, 
  			icon: 'fa fa-pencil-square-o', 
  			title: "Edit"}]%>
<%end%>
	<%= smart_listing_item_actions [
		{name: :custom,    url: category_path(category),
	  		method: :get, 
  			icon: 'fa fa-sticky-note', 
  			title: "Show info"}]%>
</td>
