<div class="row">
	<h2><%=t('menu.inventory')%></h2>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<%= render 'items/components/search'%>
		<div id="display-container" class="col-lg-3 pull-right">
				<%= render :partial => "items/components/toggle_display", :locals => { :option => @option } %>	
		</div>
	</div>
</div>
<%if can? :create, Item %>
<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-3">
		<%= link_to t('global.new_item'), new_item_path, class: "btn btn-default" %>
	</div>
	<div class="col-lg-3 col-md-3 col-sm-3">
	<a href="/items.csv"><button class="btn btn-success">export all</button></a>
	</div>
</div>
<%end%>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<%= smart_listing_render(:items) %>
	</div>
</div>

