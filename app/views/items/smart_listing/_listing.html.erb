  <table class="table table-hover">
    <thead>
    	<small>
	      <tr>
			<th class="col-lg-1 center">
				<small><%= smart_listing.sortable t('global.items.barcode'), :id %></small>
			</th>
	        <th class="col-lg-4 col-sm-5 col-md-5" ><%= smart_listing.sortable t('global.name'), :name %></th>
	        <th class="col-lg-2 col-sm-2 col-md-2" ><%= t('menu.category') %></th>
			<th class="col-lg-2 col-sm-2 col-md-2" ><%= t('menu.teams') %></th>
			<th class="col-lg-2 col-sm-2 col-md-2" ></th>
	      </tr>
	   </small>
    </thead>
    <tbody>
    	<% unless smart_listing.empty? %>  
      <% smart_listing.collection.each do |item| %>
        <tr class="editable <%=set_item_row_color(current_user, item)%>" data-id = "<%= item.id %>">
         	<%= smart_listing.render item: item, partial: "items/smart_listing/item", locals: {object: item} %>
        </tr>
      <% end %>
	<% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>


