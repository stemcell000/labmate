<header>
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Labmate <%= Organization.nil? ? "" : Organization.first.acronym %></a>
    </div>
    <% if current_user%>
    <% isAdmin = can? :manage, Organization %>
     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <%= content_tag(:li, link_to( t('global.menu.inventory'), root_path, class: "nav-link"), class: cp(root_path), remote: true)%>
        <%= content_tag(:li, link_to( t('global.menu.maintenance'), contracts_path, class: "nav-link"), class: cp(contracts_path), remote: true)%>
        <%= content_tag(:li, link_to( t('global.menu.brands'), brands_path, class: "nav-link"), remote: true)%>
        <%= content_tag(:li, link_to( t('global.menu.providers'), providers_path, class: "nav-link"), remote: true)%>
        <li class="dropdown">
        		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=t('global.menu.utilities')%><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <%= content_tag(:li, link_to( t('global.menu.organization'), organizations_path, class: "nav-link"), remote: true, if: isAdmin)%>
            <%= content_tag(:li, link_to( t('global.menu.departments'), departments_path, class: "nav-link"), remote: true, if: isAdmin)%>
            <%= content_tag(:li, link_to( t('global.menu.teams'), teams_path, class: "nav-link"), remote: true)%>
            <li role="separator" class="divider"></li>
            <%= content_tag(:li, link_to( t('global.menu.users'), users_path, class: "nav-link"), remote: true)%>
          </ul>
         </li> 
         <li class="dropdown">
        		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=t('global.menu.language')%><span class="caret"></span></a>
          <ul class="dropdown-menu">
			<li><%= link_to 'English', root_path(locale: :en) %></li>
			<li><%= link_to 'French', root_path(locale: :fr) %></li>
		</ul>
		</li>
		</ul>
	      <ul class="nav navbar-nav navbar-right">
	     		<span class="navbar-text">
				<% if signed_in? %>
	    				<%=t('global.menu.sign_in_as')%> : <strong><%= current_user.full_name %></strong> - <%=t('global.menu.status')%> : <strong><%=current_user.role.gsub('_', ' ').humanize %></strong>
		    			<%= link_to user_path(current_user.id), method: :get do %>
					 		<i class="fa fa-user"></i>
					<%end%>
		    			<%= link_to destroy_user_session_path, method: :get do %>
					 		<i class="fa fa-sign-out-alt"></i>
					<%end%>
				<% if !isAdmin%>
	    				<br /><strong><%=current_user.teams.pluck(:name).to_sentence%> </strong>
	    			<%end%>
	    			<%end%>
	     		</span>
	      </ul>
	      <%end%>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
</header>